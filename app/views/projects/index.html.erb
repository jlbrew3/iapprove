<div class="page-header">
  <h1>
    Projects
    <a href="/projects/new" class="btn btn-lg btn-success">New Project</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Notes</th>
        <th>Project status</th>
        <th>Favorite style</th>
        <th>Budget</th>
        <th>Room type</th>
        <th>Project name</th>
        <th>Actions</th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td><%= project.notes %></td>
        <td><%= project.project_status %></td>
        <td><%= project.favorite_style %></td>
        <td><%= project.budget %></td>
        <td><%= project.room_type %></td>
        <td><%= project.project_name %></td>
        <td>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
