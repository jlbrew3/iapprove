<div class="page-header">
  <div class="row">
    <div class="col-md-9">
      <h1>
        My Projects
      </h1>
    </div>
    <% if current_user.designer? == false %>
      <div class="col-md-3">
        <a href="/projects/new" class="btn btn-lg btn-success">Request A New Project</a>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Project Name</th>
        <th>Room Type</th>
        <th>Designer Name</th>
        <th>Project Status</th>
        <th>Actions</th>
      </tr>

      <% @user.projects.each do |project| %>
      <tr>
        <td><%= project.project_name %></td>
        <td><%= project.room_type %></td>

        <% if project.project_status != "Requested" %>
          <td>
            <%= project.users.where({ :designer => true }).pluck(:username)[0].capitalize %>
          </td>
        <% else %>
          <td><i>Not Yet Assigned</i></td>
        <% end %>

        <td><%= project.project_status %></td>
        <td>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">Edit</a>
          <!-- <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow">Delete</a> -->
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
