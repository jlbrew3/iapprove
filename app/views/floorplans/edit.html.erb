<!-- Validation failure messages -->
<% if @floorplan.errors.any? %>
  <% @floorplan.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Floorplan #<%= @floorplan.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_floorplan/<%= @floorplan.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @floorplan.image %>">
      </div>

      <!-- Label and input for client_approved -->
      <div class="checkbox">
        <label for="client_approved">
          <input type="checkbox" id="client_approved" name="client_approved" value="1" <%= "checked" if @floorplan.client_approved %>>
          Client approved
        </label>
      </div>

      <!-- Label and input for project_id -->
      <div class="form-group">
        <label for="project_id" class="control-label">
          Project
        </label>

        <input type="text" id="project_id" name="project_id" placeholder="Project" class="form-control" value="<%= @floorplan.project_id %>">
      </div>

      <button class="btn btn-warning">
        Update Floorplan
      </button>
      or
      <a href="/floorplans/<%= @floorplan.id %>">Cancel</a>
    </form>
  </div>
</div>
